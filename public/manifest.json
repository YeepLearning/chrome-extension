{
    "manifest_version": 3,
    "name": "YouTube Transcript Viewer",
    "version": "1.0.1",
    "description": "View YouTube video transcripts synchronized with playback",
    "action": {
      "default_popup": "index.html",
      "default_title": "YouTube Transcript Viewer"
    },
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "https://*.youtube.com/*"
    ],
    "content_scripts": [
      {
        "matches": ["https://*.youtube.com/*"],
        "js": ["content.js"]
      }
    ]
  }